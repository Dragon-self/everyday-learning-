int main()
{
	int z = 1;
	int i = 0;
	int n = 0;
	int sum = 0;
	int s = 0;
	scanf("%d", &s);
	for (n = 1; n <= s; n++)
	{
		z = z * n;
		sum = sum + z;
	}
	printf("%d", sum);
	return 0;
}

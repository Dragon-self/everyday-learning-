#define _CRT_SECURE_NO_WARNINGS


#include <stdio.h>
int main()



{//求两个数之和
	int num1 = 0;
	int num2 = 0;
	int sum = 0;
	scanf("%d%d", &num1, &num2);
	sum = num1 + num2;
	printf("sum = %d\n", sum);
}








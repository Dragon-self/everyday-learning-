{
	//printf("%d\n", '\32');%d对应数字
	//printf("%c\n", '\32');//\32八进制-->26十进制-->%c对应字符
	printf("%d\n", strlen("c:\test\32\test.c"));
	//printf("%c\n", '\'');
	//printf("D:\\编程\\personal code\\test_2021_7_8\n");
	//printf("\\\\\n");
	//printf("abcn\n");
	//printf("abc\n");
	return 0;
}





